{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "ANALYZE_BUNDLE",
    "CONTENTFUL_DELIVERY_TOKEN",
    "CONTENTFUL_ENV",
    "CONTENTFUL_MANAGEMENT_TOKEN",
    "CONTENTFUL_PREVIEW_TOKEN",
    "CONTENTFUL_SPACE_ID",
    "CONTENTFUL_STARTER_ACCESS_TOKEN",
    "CONTENTFUL_STARTER_SPACE_ID",
    "CONTENTFUL_USE_PREVIEW",
    "DEFAULT_SITE_ID",
    "DEPLOY_URL",
    "DOMAIN",
    "GRAPHQL_SERVER_URL",
    "NEXT_PUBLIC_GTM_ID",
    "NEXT_PUBLIC_SENTRY_DSN",
    "NODE_ENV",
    "PAGES_REVALIDATE",
    "PORT",
    "PREVIEW_TOKEN",
    "SANITY_STUDIO_SANITY_API_VERSION",
    "SANITY_STUDIO_SANITY_DATASET",
    "SANITY_STUDIO_SANITY_PROJECT_ID",
    "SANITY_STUDIO_SANITY_PROJECT_TITLE",
    "SANITY_TOKEN",
    "SITE_SETTINGS",
    "SITE",
    "VERCEL_URL"
  ],
  "pipeline": {
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    },
    "deploy:sanity": {
      "outputMode": "new-only",
      "cache": false,
      "dependsOn": ["^build"]
    },
    "build": {
      "outputMode": "new-only",
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "test": { "outputMode": "new-only", "outputs": ["coverage/**"], "dependsOn": [] },
    "lint": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "outputMode": "new-only",
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "gql:dev": {
      "outputMode": "new-only",
      "dependsOn": ["^build", "graphql-sdk#sync:cms"],
      "cache": false,
      "persistent": true
    },
    "gql:logs": {
      "outputMode": "new-only",
      "cache": false,
      "persistent": true
    },
    "clean": {
      "outputMode": "new-only",
      "cache": false
    },
    "graphql-sdk#build": {
      "outputMode": "new-only",
      "cache": false,
      "dependsOn": ["graphql-sdk#sync:cms", "^build"],
      "inputs": [
        "./packages/graphql-sdk/.cms-sync",
        "./packages/**/src/**/*.graphql",
        "./apps/**/src/**/*.graphql"
      ],
      "outputs": ["dist/**", "schema.graphql", "src/generated/**"]
    },
    "graphql-sdk#gql:start": {
      "outputMode": "new-only",
      "cache": false,
      "dependsOn": ["graphql-extensions#build", "graphql-sdk#sync:cms", "^build"]
    },
    "graphql-sdk#sync:cms": {
      "outputMode": "new-only",
      "cache": false,
      "dependsOn": ["^build", "graphql-extensions#build"],
      "outputs": [".cms-sync"]
    },
    "web#build": {
      "outputMode": "new-only",
      "dependsOn": ["graphql-sdk#sync:cms", "graphql-sdk#gql:start", "^build"],
      "outputs": ["out/**", ".next/**"]
    },
    "sanity-studio#sanity-contentful-export": {
      "outputMode": "new-only",
      "cache": false
    },
    "sanity-studio#sanity-create-schema": {
      "outputMode": "new-only",
      "cache": false
    },
    "sanity-studio#sanity-create-dataset": {
      "outputMode": "new-only",
      "cache": false
    },
    "sanity-studio#sanity-dataset-import": {
      "outputMode": "new-only",
      "cache": false
    },
    "sanity-studio#sanity-studio-deploy": {
      "outputMode": "new-only",
      "cache": false
    }
  }
}

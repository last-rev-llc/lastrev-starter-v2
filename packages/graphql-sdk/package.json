{
  "name": "graphql-sdk",
  "version": "0.1.0",
  "main": "dist/index.js",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build:compile": "tsc",
    "build:prod": "cross-env NODE_ENV=production rollup -c",
    "build": "run-s download:schema codegen build:compile",
    "codegen:watch": "graphql-codegen --config codegen.yml --watch",
    "codegen": "graphql-codegen --config codegen.yml",
    "dev:compile": "tsc -w",
    "download:schema:dev": "nodemon -x \"pnpm download:schema\" -w ../graphql-extensions/dist",
    "download:schema": "npm run gql:healthcheck && graphql-codegen --config codegen.schema.yml || echo 'GraphQL Server is not available'",
    "format": "prettier --write \"src/**/*.ts\"",
    "gql:dev": "run-s gql:pm2:kill 'gql:pm2 --watch' sdk:dev",
    "gql:healthcheck": "wait-on -c wait-on-config.js || echo 'GraphQL Server is not available'",
    "gql:logs": "pm2 logs",
    "gql:pm2:kill": "pm2 kill",
    "gql:pm2:update": "pm2 update",
    "gql:pm2": "pm2 start pm2.json",
    "gql:start": "run-s gql:pm2:kill 'gql:pm2 --watch'",
    "lint": "eslint",
    "sdk:dev": "concurrently \"pnpm download:schema:dev\" \"pnpm codegen:watch\" \"pnpm dev:compile\"",
    "sync:cms": "last-rev cms-sync -c ./config.js",
    "test:watch": "jest --watch",
    "test": "jest --passWithNoTests"
  },
  "peerDependencies": {
    "@types/react-dom": "^18.3.0",
    "@types/react-router-dom": "^5.3.3",
    "@types/react": "^18.3.1",
    "graphql": "^16.9.0",
    "nodemon": "^3.1.7",
    "react-dom": "^18.3.1",
    "react-scripts": "^5.0.1",
    "react": "^18.3.1",
    "tsc-watch": "^4.2.9"
  },
  "dependencies": {
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/fragment-matcher": "^5.0.2",
    "@graphql-codegen/schema-ast": "^4.1.0",
    "@graphql-codegen/typescript-graphql-request": "^6.2.0",
    "@graphql-codegen/typescript-operations": "^4.4.0",
    "@last-rev/app-config": "^0.6.0",
    "@last-rev/cli": "^0.7.0",
    "@parcel/watcher": "^2.4.1",
    "concurrently": "^8.2.2",
    "dotenv": "^17.2.1",
    "graphql-request": "^6.1.0",
    "graphql-tag": "^2.12.6",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^20.12.10",
    "@types/react-dom": "^18.3.0",
    "@types/react-router-dom": "^5.3.3",
    "@types/react": "^18.3.1",
    "cross-env": "^7.0.3",
    "encoding": "^0.1.13",
    "graphql-extensions": "workspace:*",
    "graphql": "^16.9.0",
    "nodemon": "^3.1.7",
    "pm2": "^6.0.8",
    "react-dom": "^18.3.1",
    "react-scripts": "^5.0.1",
    "react": "^18.3.1",
    "sanity": "^3.90.0",
    "sanity-studio": "workspace:*",
    "tsconfig": "workspace:*",
    "typescript": "^5.7.2",
    "wait-on": "^7.2.0"
  }
}
